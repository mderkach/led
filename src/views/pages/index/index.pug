extends ../../layout/main

block variables
  - title = 'Led';
  - description = '';
  - theme = '#009FE3';
  - slug = 'index';
  - pageClass = slug + '-page';

block content
  section.banner
    +pic('banner__bg', './assets/img/bg-main.jpg')
    +wrapper()
      +icon('banner__logo', 'logo')
      .banner__inner
        +pic('banner__inner-bg', './assets/img/bg-alt.png')
        h1.banner__header ПРЕДНОВОГОДНИЙ ТУРНИР ПО ХОККЕЮ 3х3
        p.banner__subheader призовой фонд
        strong.banner__price
          span.inherit 250 000
          | р
        .banner__description
          p.banner__description-text
            span.banner__description-upper 19 ДЕКАБРЯ ОТБОРОЧНЫЙ ЭТАП
            br
            span.banner__description-lower Суббота. Ледовый дворец «Центральный»
          p.banner__description-separator &nbsp;/&nbsp;
          p.banner__description-text
            span.banner__description-upper 26 ДЕКАБРЯ ФИНАЛЬНЫЙ ЭТАП
            br
            span.banner__description-lower Суббота. Арена ЦСКА (Тренировочный лед)
        p.banner__header УЧАСТИЕ БЕСПЛАТНОЕ
  section.rules
    .rules__clip
    //- img.rules__clip(src="./assets/img/bg1.png" alt="")
    +wrapper()
      .rules__head-wrapper
        +pic('rules__head-pic', './assets/img/shaiba.png')
        .rules__head-inner
          .rules__head-line
          .rules__head-text-outer
            .rules__head-text
              span &nbsp;
              | принять участие
              span &nbsp;
        +pic('rules__head-pic', './assets/img/shaiba.png')
      h2.rules__h2 ПРАВИЛА И ФОРМАТ
      .rules__container
        .rules__team-wrapper
          p.rules__team-header КОМАНДА
          img.rules__team-img(src="./assets/img/3+1.png" alt="")
        .rules__people-wrapper
          img.rules__people-img(src="./assets/img/man.png" alt="")
          p.rules__people-header
            | МУЖЧИНЫ
            br
            | ЖЕНЩИНЫ
            br
            | 18+
          img.rules__people-img(src="./assets/img/woman.png" alt="")
      .rules__details
        h3.rules__details-header ГРУППОВОЙ ЭТАП:
        p.rules__details-descr группы по 6 команд. В плей-офф выходит 3 команды.
        h3.rules__details-header ПЛЕЙ-ОФФ:
        p.rules__details-descr 48 команд играют в группах по 3 команды. Две выходят в сетку на вылет.
